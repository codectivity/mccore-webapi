                                <circle cx="361.838" cy="255.838" r="149.838" fill="#D9D9D9"/>
                            </g>
                            <defs>
                                <clipPath id="clip0_1_27">
                                    <rect width="512" height="512" fill="white"/>
                                </clipPath>
                            </defs>
                        </svg>
                        <span class="text-lg font-semibold">MCCore</span>
                    </div>
                    <div class="hidden md:flex items-center space-x-6">
                        <a href="/" class="text-gray-300 hover:text-white transition-colors">Dashboard</a>
                        <a href="/keys" class="text-gray-300 hover:text-white transition-colors">API Keys</a>
                        <a href="/assets" class="text-gray-300 hover:text-white transition-colors">Launchers</a>
                        <a href="/java" class="text-gray-300 hover:text-white transition-colors">Java</a>
                        <a href="/news" class="text-gray-300 hover:text-white transition-colors">News</a>
                        <a href="/hwids" class="text-gray-300 hover:text-white transition-colors">HWIDs</a>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/logout" class="text-gray-400 hover:text-white transition-colors">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-6 py-12">
        <!-- Header -->
        <div class="mb-12">
            <h1 class="text-4xl font-bold mb-4">Minecraft Launcher Admin</h1>
            <p class="text-gray-400 text-lg">Manage your launcher assets, API keys, and Java configurations</p>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-12">
            <div class="card-glass rounded-lg p-6 hover-lift">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm">API Keys</p>
                        <p class="text-2xl font-bold"><%= apiKeys ? apiKeys.length : 0 %></p>
                    </div>
                    <div class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center">
                        <i class="fas fa-key text-blue-400"></i>
                    </div>
                </div>
            </div>

            <div class="card-glass rounded-lg p-6 hover-lift">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm">Launchers</p>
                        <p class="text-2xl font-bold"><%= launcherAssets ? launcherAssets.length : 0 %></p>
                    </div>
                    <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center">
                        <i class="fas fa-download text-green-400"></i>
                    </div>
                </div>
            </div>

            <div class="card-glass rounded-lg p-6 hover-lift">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm">Status</p>
                        <p class="text-2xl font-bold text-green-400">Online</p>
                    </div>
                    <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center">
                        <i class="fas fa-server text-green-400"></i>
                    </div>
                </div>
            </div>

            <div class="card-glass rounded-lg p-6 hover-lift">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm">Updated</p>
                        <p class="text-2xl font-bold"><%= new Date().toLocaleDateString() %></p>
                    </div>
                    <div class="w-10 h-10 bg-purple-500/20 rounded-lg flex items-center justify-center">
                        <i class="fas fa-clock text-purple-400"></i>
                    </div>
                </div>
            </div>

            <div class="card-glass rounded-lg p-6 hover-lift">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-400 text-sm">News Articles</p>
                        <p class="text-2xl font-bold"><%= newsArticles ? newsArticles.length : 0 %></p>
                    </div>
                    <div class="w-10 h-10 bg-orange-500/20 rounded-lg flex items-center justify-center">
                        <i class="fas fa-newspaper text-orange-400"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Sections -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- API Keys Section -->
            <div class="card-glass rounded-lg p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-semibold">API Keys</h2>
                    <a href="/keys" class="px-4 py-2 bg-white text-black rounded-md hover:bg-gray-100 transition-colors text-sm">
                        Manage
                    </a>
                </div>
                
                <div class="space-y-3">
                    <% if (apiKeys && apiKeys.length > 0) { %>
                        <% apiKeys.slice(0, 3).forEach(key => { %>
                            <div class="flex items-center justify-between p-3 bg-black/20 rounded-md">
                                <div class="flex items-center space-x-3">
                                    <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                                    <span class="text-sm"><%= key.name || 'Unnamed Key' %></span>
                                </div>
                                <span class="text-xs text-gray-400"><%= new Date(key.created_at).toLocaleDateString() %></span>
                            </div>
                        <% }); %>
                        <% if (apiKeys.length > 3) { %>
                            <div class="text-center text-sm text-gray-400">
                                +<%= apiKeys.length - 3 %> more
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="text-center py-8 text-gray-400">
                            <i class="fas fa-key text-2xl mb-2"></i>
                            <p>No API keys found</p>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Assets Section -->
            <div class="card-glass rounded-lg p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-semibold">Launchers</h2>
                    <a href="/assets" class="px-4 py-2 bg-white text-black rounded-md hover:bg-gray-100 transition-colors text-sm">
                        Manage
                    </a>
                </div>
                
                <div class="space-y-3">
                    <% if (launcherAssets && launcherAssets.length > 0) { %>
                        <% launcherAssets.slice(0, 3).forEach(asset => { %>
                            <div class="flex items-center justify-between p-3 bg-black/20 rounded-md">
                                <div class="flex items-center space-x-3">
                                    <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                                    <div>
                                        <span class="text-sm"><%= asset.client_id %></span>
                                        <p class="text-xs text-gray-400">v<%= asset.version %></p>
                                    </div>
                                </div>
                                <span class="text-xs text-gray-400"><%= asset.server %></span>
                            </div>
                        <% }); %>
                        <% if (launcherAssets.length > 3) { %>
                            <div class="text-center text-sm text-gray-400">
                                +<%= launcherAssets.length - 3 %> more
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="text-center py-8 text-gray-400">
                            <i class="fas fa-download text-2xl mb-2"></i>
                            <p>No launchers found</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="mt-12">
            <h2 class="text-xl font-semibold mb-6">Quick Actions</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <a href="/keys" class="card-glass rounded-lg p-6 hover-lift">
                    <div class="flex items-center space-x-4">
                        <div class="w-10 h-10 bg-blue-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-plus text-blue-400"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold">Create API Key</h3>
                            <p class="text-sm text-gray-400">Generate new access key</p>
                        </div>
                    </div>
                </a>
                
                <a href="/assets" class="card-glass rounded-lg p-6 hover-lift">
                    <div class="flex items-center space-x-4">
                        <div class="w-10 h-10 bg-green-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-upload text-green-400"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold">Add Launcher</h3>
                            <p class="text-sm text-gray-400">Add new launcher</p>
                        </div>
                    </div>
                </a>
                
                <a href="/java" class="card-glass rounded-lg p-6 hover-lift">
                    <div class="flex items-center space-x-4">
                        <div class="w-10 h-10 bg-yellow-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-cog text-yellow-400"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold">Configure Java</h3>
                            <p class="text-sm text-gray-400">Set up Java versions</p>
                        </div>
                    </div>
                </a>
                
                <a href="/news" class="card-glass rounded-lg p-6 hover-lift">
                    <div class="flex items-center space-x-4">
                        <div class="w-10 h-10 bg-orange-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-newspaper text-orange-400"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold">Manage News</h3>
                            <p class="text-sm text-gray-400">Create and edit articles</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </main>
</body>
</html> 